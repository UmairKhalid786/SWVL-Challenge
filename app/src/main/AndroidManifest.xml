<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.techlads.swvl">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SWVLMoviesChallange">
        <activity
            android:name="com.techlads.swvl.framework.ui.home.ItemListActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.SWVLMoviesChallange.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.techlads.swvl.framework.ui.detail.ItemDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName="com.techlads.swvl.framework.ui.home.ItemListActivity"
            android:theme="@style/Theme.SWVLMoviesChallange.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.techlads.swvl.framework.ui.home.ItemListActivity" />
        </activity>
    </application>

</manifest>